<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiApp3="using:MauiApp3"
             x:Class="MauiApp3.MainPage"
             MinimumHeightRequest="400"
             MinimumWidthRequest="400">

    <Grid ColumnDefinitions="4, *, 4, 4, *, 4, 4, 4, *, 4, 4, *, 4" ColumnSpacing="10" 
          RowDefinitions="4, *, 4, *, 4" RowSpacing="10" WidthRequest="-1" HeightRequest="300"
          x:Name="myGrid" Margin="30">
        <StackLayout x:Name="myStackLayout"></StackLayout>

        <BoxView Grid.Column="1" Color="AliceBlue" x:Name="Segment10"/>

        <BoxView Grid.Column="0" Grid.Row="1" Color="AliceBlue" x:Name="Segment11"/>
        <BoxView Grid.Column="2" Grid.Row="1" Color="AliceBlue" x:Name="Segment12"/>

        <BoxView Grid.Column="1" Grid.Row="2" Color="AliceBlue" x:Name="Segment13"/>

        <BoxView Grid.Column="0" Grid.Row="3" Color="AliceBlue" x:Name="Segment14"/>
        <BoxView Grid.Column="2" Grid.Row="3" Color="AliceBlue" x:Name="Segment15"/>

        <BoxView Grid.Column="1" Grid.Row="4" Color="AliceBlue" x:Name="Segment16"/>

        <BoxView Grid.Column="4" Color="AliceBlue" x:Name="Segment20"/>

        <BoxView Grid.Column="3" Grid.Row="1" Color="AliceBlue" x:Name="Segment21"/>
        <BoxView Grid.Column="5" Grid.Row="1" Color="AliceBlue" x:Name="Segment22"/>

        <BoxView Grid.Column="4" Grid.Row="2" Color="AliceBlue" x:Name="Segment23"/>

        <BoxView Grid.Column="3" Grid.Row="3" Color="AliceBlue" x:Name="Segment24"/>
        <BoxView Grid.Column="5" Grid.Row="3" Color="AliceBlue" x:Name="Segment25"/>

        <BoxView Grid.Column="4" Grid.Row="4" Color="AliceBlue" x:Name="Segment26"/>

        <BoxView HeightRequest="40" Grid.Column="6" Grid.Row="1" Color="Red" x:Name="Segment0000"/>
        <BoxView HeightRequest="40" Grid.Column="6" Grid.Row="3" Color="Red" x:Name="Segment1111"/>

        <BoxView Grid.Column="8" Color="AliceBlue" x:Name="Segment30"/>

        <BoxView Grid.Column="7" Grid.Row="1" Color="AliceBlue" x:Name="Segment31"/>
        <BoxView Grid.Column="9" Grid.Row="1" Color="AliceBlue" x:Name="Segment32"/>

        <BoxView Grid.Column="8" Grid.Row="2" Color="AliceBlue" x:Name="Segment33"/>

        <BoxView Grid.Column="7" Grid.Row="3" Color="AliceBlue" x:Name="Segment34"/>
        <BoxView Grid.Column="9" Grid.Row="3" Color="AliceBlue" x:Name="Segment35"/>

        <BoxView Grid.Column="8" Grid.Row="4" Color="AliceBlue" x:Name="Segment36"/>

        <BoxView Grid.Column="11" Color="AliceBlue" x:Name="Segment40"/>

        <BoxView Grid.Column="10" Grid.Row="1" Color="AliceBlue" x:Name="Segment41"/>
