        <BoxView Grid.Column="11" Grid.Row="2" Color="AliceBlue" x:Name="Segment43"/>

        <BoxView Grid.Column="10" Grid.Row="3" Color="AliceBlue" x:Name="Segment44"/>
        <BoxView Grid.Column="12" Grid.Row="3" Color="AliceBlue" x:Name="Segment45"/>

        <BoxView Grid.Column="11" Grid.Row="4" Color="AliceBlue" x:Name="Segment46"/>
    </Grid>
        
</ContentPage>
